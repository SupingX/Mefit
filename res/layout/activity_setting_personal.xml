<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg"
    android:orientation="vertical"
    tools:context="com.mycj.junsda.DeviceAcitivy" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main_tab" >

        <com.mycj.junsda.view.AlphaImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_nav_back" />

        <com.mycj.junsda.view.FangTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/person_setting"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            fang:fang_typeface="JIAN" />
    </RelativeLayout>

    <com.mycj.junsda.view.DampingScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <RadioGroup
                android:id="@+id/rg_unit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="horizontal" >

                <com.mycj.junsda.view.FangRadioButton
                    android:id="@+id/rb_unit_zh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="@string/zh_"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:f_typeface="JIAN" />

                <com.mycj.junsda.view.FangRadioButton
                    android:id="@+id/rb_unit_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="@string/en_"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:f_typeface="JIAN" />
            </RadioGroup>

            <!-- line 2 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:padding="2dp"
                        android:text="@string/sex"
                        
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_sex_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:ems="4"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/woman"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:padding="2dp"
                        android:text="@string/weight"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_weight_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                          android:ems="3"
                        android:text="60"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="NUM" />

                    <com.mycj.junsda.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:padding="2dp"
                        android:text="@string/height"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_height_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                        android:text="175"
                     android:ems="4"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="NUM" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <com.mycj.junsda.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:padding="6dp"
                        android:text="@string/birthday"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_birthday_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="1990-01-01"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="NUM" />
                </LinearLayout>
            </LinearLayout>

            <!-- line 3 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="horizontal" >

                <com.mycj.junsda.view.FangTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:padding="6dp"
                    android:text="@string/sleep_jiance"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />

                <com.mycj.junsda.view.FangCheckBox
                    android:id="@+id/rb_sleep_onoff"
                      fang:fbox_typeface="JIAN" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="@string/close"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            <!-- line 4 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <com.mycj.junsda.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:padding="6dp"
                        android:text="@string/sleep_time"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_sleep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="22：00"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="NUM" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <com.mycj.junsda.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:padding="6dp"
                        android:text="@string/wake_up"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_wake_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        
                        fang:fang_typeface="NUM" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="horizontal" >

                <com.mycj.junsda.view.FangTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:padding="6dp"
                    android:text="@string/goal"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />

                <com.mycj.junsda.view.FangTextView
                        android:id="@+id/tv_sport_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="20000"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="NUM" />
            </LinearLayout>
        </LinearLayout>
    </com.mycj.junsda.view.DampingScrollView>

</LinearLayout>